<div class="container h-100">
  <div class="row align-items-center h-100">
    <div class="col-md-6 mx-auto">
      <h1 class="text-center mb-4">Put your nickname</h1>
      <%= form_with model: @user do |f|%>
        <div class="form-group">
          <%= f.text_field :nick, class: "form-control form-control-lg text-center", placeholder: "Nick here" %>
        </div>
        <br>
        <%= f.submit "Join chat", class: "btn btn-primary btn-block btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
